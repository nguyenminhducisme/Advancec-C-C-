# Compiler
CC = gcc
CFLAGS = -g -Wall -Wextra -IHeader

# Source files
SRC := $(wildcard Source/*.c)

# Object files
OBJ := $(patsubst Source/%.c, build/%.o, $(SRC))

# Output file
TARGET := bin\main.exe

# Default rule
all: $(TARGET)

# Linking
$(TARGET): $(OBJ)
	@mkdir -p bin
	$(CC) $(OBJ) -o $@
	@echo "âœ… Build xong: $@"

# Compiling
build/%.o: Source/%.c
	@mkdir -p build
	$(CC) $(CFLAGS) -c $< -o $@

# Run the program
run: $(TARGET)
	@echo "ðŸš€ Running..."
	.\$(TARGET)
	@echo "ðŸ Done."

# Clean
clean:
	rm -rf build bin
	@echo "ðŸ§¹ Dá»n sáº¡ch xong"

debug: $(TARGET)
	gdb ./$(TARGET)
